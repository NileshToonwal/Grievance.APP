                    <Button x:Name="addNoteSubmit" Text="Submit" Clicked="addNoteSubmit_Clicked" />
                </StackLayout>

                <ImageButton x:Name="complaintDetailBack"
                             Source="back.png"
                             BackgroundColor="Transparent"
                             Clicked="complaintDetailBack_Clicked"
                             Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" />

                -->
                <!-- Add the table view or other view for displaying notes here -->
                <!--

            </Grid>-->
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
